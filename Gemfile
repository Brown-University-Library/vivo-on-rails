source 'https://rubygems.org'

gem 'rails', '~> 6.0.2'

# Note: we can technically upgrade to a new version of this
# gem but we need to make sure the server will support it.
#
# As of 7/8/2020 our servers support '< 0.5' (what we used with Rails 4.x)
# but not '0.5.3' (the latest)
# gem 'mysql2', '< 0.5'
#
# Temporary set to SQLite until we get a newer version of MySQL
# in our test server.
gem 'sqlite3'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use jQuery as the JavaScript library
gem 'jquery-rails'

# Needed on RedHat
gem 'therubyracer', platforms: :ruby

# Needed for rails console in RedHat
gem "rb-readline"

# Loads environment settings from .env file
# See https://github.com/bkeepers/dotenv
gem 'dotenv-rails'

gem "solr_lite", '0.0.16'
# gem "solr_lite", path: '/Users/hectorcorrea/dev/solr_lite'
