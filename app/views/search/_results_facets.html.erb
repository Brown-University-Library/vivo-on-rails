<div class="col-md-2 col-md-pull-10 hidden-print" id="search-facets">
  <h2 class="sr-only">Refine</h2>
  <div id="facet-4" class="facet">
    <div class="panel panel-default">
      <% @presenter.facets.each do |facet| %>

        <% next if facet.values.count == 0 %>

        <div class="panel-heading">
          <h3 class="facetLabel"><%= facet.title %></h3>
        </div>

        <div class="panel-body">
          <ul class="list-unstyled">
            <% facet.values.each_with_index do |value, i| %>
              <% if i < 10 || value.remove_url != nil %>
                <li>
                  <span>
                    <% if value.remove_url == nil %>
                      <a href="<%= search_url() + "?" + @presenter.search_qs + "&fq=" + facet.to_fq(value.text) %>"><%= value.text %></a>
                    <% else %>
                      <%= value.text %>
                      <a href="<%= value.remove_url %>">
                        <span class="glyphicon glyphicon-remove"></span>
                        <span class="sr-only">Remove facet <%= value.text %></span>
                      </a>
                    <% end %>
                  </span>
                  &nbsp;<span class="badge pull-right">
                      <span class="categoryCount"><%= value.count %></span>
                  </span>
              <% end %>
            <% end %>
          </ul>

          <% if facet.values.count > 10 %>
            <%= render "facets_more", facet: facet %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
