<div class="clearfix visible-xs-block"></div>
<div class="col-lg-3 col-sm-4 col-md-3 col-xs-12 expert-results ng-scope" data-fb-result="<%= faculty_show_url(researcher.id) %>">
  <div class="gap30"></div>
  <section itemscope="" itemtype="http://schema.org/Person" id="individual-intro" class="vcard person" role="region">
    <section class="share-contact" role="region">
      <div id="photo-wrapper">
        <%= image_tag(researcher.thumbnail || "person_placeholder.jpg", alt: "Faculty Picture", width: "120", class: "img-circle") %>
      </div>
      <h4>
        <span itemprop="name" class="fn">
          <a href="<%= faculty_show_url(researcher.vivo_id) %>"
            title="<%= faculty_show_url(researcher.vivo_id) %>">
            <%= researcher.name %>
          </a>
        </span>
      </h4>
      <div class="emailsContainer">
        <h4>
          <a href="mailto:<%= researcher.email %>"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></a>
        </h4>
      </div>
    </section>
  </section>
</div>
