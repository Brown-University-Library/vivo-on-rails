<% if @faculty.teacher_for.count > 0 %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 id="relatedBy-Authorship" title="" class="panel-title">Teaching</h3>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
      <tbody>
        <% @faculty.teacher_for.each do |class_name| %>
          <tr class="tableRow" role="listitem">
            <td class="citation-data">
              <span class="listDateTime"><%= class_name%></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
