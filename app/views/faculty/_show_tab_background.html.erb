<% if @presenter.has_background %>
  <% if locals[:add_tab] == true %>
    <div id="background" class="tab-pane tabContentFinder">
      <h3>&nbsp;</h3>
  <% else %>
    <h3>Background</h3>
  <% end %>

      <% if @presenter.faculty.education.count > 0 %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 id="relatedBy-Authorship" title="" class="panel-title">Education and Training</h3>
          </div>

          <div class="panel-body">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <th>Year</th>
                  <th>Degree</th>
                  <th>Institution</th>
                </tr>
                <% @presenter.faculty.education.each do |ed| %>
                  <tr class="tableRow" role="listitem">
                    <td class="citation-data">
                      <span class="listDateTime"><%= ed.date%></span>
                    </td>
                    <td>
                      <span class="listDateTime"><%= ed.degree %></span>
                    </td>
                    <td>
                      <span class="listDateTime">
                        <a href="<%= ed.school_uri %>"><%= ed.school_name%></a>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %> <!-- education.count -->

      <%= render "show_text_tab", locals: {
        divId: "honorsAwards",
        title: "Honors and Awards",
        text: @presenter.faculty.awards} %>

      <% if !@presenter.faculty.web_page_text.empty? %>
          <div id="webPage" class="tab-pane fade in active" role="tabpanel">
            <h2 id="webPage" pgroup="tabs" class="hidden">On the Web</h2>
            <div id="webPageGroup">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 id="relatedBy-Authorship" title="" class="panel-title">On the Web</h3>
                </div>
                <div class="panel-body">
                  <div class="property-list" role="list" id="relatedBy-Authorship-List" displaylimit="5">
                    <a href="<%= @presenter.faculty.web_page_uri %>"><%= @presenter.faculty.web_page_text %></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>

  <% if locals[:add_tab] == true %>
    </div>
  <% end %>
<% end %>
